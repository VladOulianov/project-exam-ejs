<%- include('./partials/head')-%>
<div class="container">
  <% if (message) { %>
  <div style="text-align: center" class="alert alert-<%= message.type %> ">
    <p><%= message.message %></p>
  </div>
  <% } %>
  <div class="row">
    <div class="col-md-12">
      <h1>Enregistez-vous</h1>

      <div class="faq-main">

        <div class="" id="accordion" role="tablist" aria-multiselectable="true">
          <form action="/user/register?_method=POST" method="POST">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">

            <div class="form-group">
              <label for="inputFristname">Prénom</label>
              <% if (input) { %>
              <input type="text" class="form-control" placeholder="John" name="firstname" value="<%= input.firstname %>">
              <% } else{ %>  
                <input type="text" class="form-control" placeholder="John" name="firstname">
              <% } %>
            </div>
            <div class="form-group">
              <label for="inputLastname">Nom</label>
              <% if (input) { %>
                <input type="text" class="form-control" placeholder="Doe" name="lastname" value="<%= input.lastname %>">
                <% } else{ %> 
                  <input type="text" class="form-control" placeholder="Doe" name="lastname">
                  <% } %> 
              
            </div>
            <div class="form-group">
              <label for="inputEmail">Adresse mail</label>
              <% if (input) { %>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="johndoe@hotmail.fr" name="email" value="<%= input.email %>">
                <% } else{ %> 
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="johndoe@hotmail.fr" name="email">
                  <% } %> 
              
            </div>
            <div class="form-group">
              <label for="inputPassword1">Mot de passe</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <div class="form-group">
              <label for="inputPassword2">Confirmer le mot de passe</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password2">
            </div>
            <div class="form-group">
              <label for="inputNumber">Numero de téléphone</label>
              <% if (input) { %>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="0612345678" name="number" value="<%= input.phoneNumber %>">
                <% } else{ %> 
                  <input type="text" class="form-control" id="exampleInputPassword1" placeholder="0612345678" name="number">
                  <% } %> 
              
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>
<%- include('./partials/footer')-%>