<%- include('./partials/head')-%>
<div class="container" style="margin-bottom: 20px;">
  <% if (message) { %>
    <div style="text-align: center" class="alert alert-<%= message.type %> ">
      <p><%= message.message %></p>
    </div>
    <% } %>
  <div class="row">
    <div class="col-md-12">
      <h1>Modifier vos information</h1>
      
      <div class="faq-main">
			
        <div class="" id="accordion" role="tablist" aria-multiselectable="true">
          <form action="/user/option?_method=PUT" method="POST">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
           
            <div class="form-group">
              <label for="inputFristname">Prénom</label>
              <input type="text" class="form-control" name="firstname" value="<%= user.firstname %>">
            </div>
            <div class="form-group">
              <label for="inputLastname">Nom</label>
              <input type="text" class="form-control" name="lastname" value="<%= user.lastname %>">
            </div>
            <div class="form-group">
              <label for="inputEmail">Adresse mail</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%= user.email %>">
            </div>
            <div class="form-group">
              <label for="inputNumber">Numero de téléphone</label>
              <input type="text" class="form-control" id="exampleInputPassword1" name="number" value="<%= user.phonenumber %>">
            </div>
            <button type="submit" class="btn btn-primary">Modifier information</button>
            </form>
        </div>
      </div>

      <div class="faq-main">
        <% if (messagePass) { %>
          <div style="text-align: center" class="alert alert-<%= messagePass.type %> ">
            <p><%= messagePass.message %></p>
          </div>
          <% } %>
        <div class="" id="accordion" role="tablist" aria-multiselectable="true">
          <form action="/user/option/password?_method=PUT" method="POST">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
           
            
            <div class="form-group">
              <label for="inputPassword1">Mot de passe</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <div class="form-group">
              <label for="inputPassword2">Confirmer le mot de passe</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password2" >
            </div>
            <button type="submit" class="btn btn-primary">Modifier mot de passe</button>
            </form>
        </div>
      </div>
      
    </div>
  </div>
</div>
  <%- include('./partials/footer')-%>