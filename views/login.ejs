<%- include('./partials/head')-%>
<div class="container">
  <% if (message) { %>
    <div style="text-align: center" class="alert alert-<%= message.type %> ">
      <p><%= message.message %></p>
    </div>
    <% } %>
  <div class="row">
    <div class="col-md-12">
      <h1>Bienvenue veuillez-vous connecter</h1>
      
      <div class="faq-main">

        <div class="" id="accordion" role="tablist" aria-multiselectable="true">
    
         

          <form action="/user/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label for="exampleInputEmail1">Vôtre adresse mail</label>
              <% if (input) { %>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                name="email" value="<%= input.email %>">
                <% } else{ %> 
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                name="email">
                  <% } %> 
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Vôtre mot de passe</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Se connecter</button>
          </form>
    
        </div>
      </div>


    </div>
  </div>
</div>
  <%- include('./partials/footer')-%>